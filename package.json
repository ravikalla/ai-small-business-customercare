{
  "name": "small-business-chatbot",
  "version": "1.1.1",
  "description": "AI chatbot for small businesses with knowledge base integration",
  "main": "src/index.js",
  "author": "Ravi Kalla <ravi2523096+sbc@gmail.com>",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:unit:watch": "jest --testPathPattern=tests/unit --watch",
    "test:unit:coverage": "jest --testPathPattern=tests/unit --coverage",
    "test:integration": "cucumber-js",
    "test:api": "cucumber-js --tags @api",
    "test:business": "cucumber-js --tags @business",
    "test:knowledge": "cucumber-js --tags @knowledge",
    "test:webhook": "cucumber-js --tags @webhook",
    "test:smoke": "cucumber-js --tags @smoke",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:report": "cucumber-js --format html:test-reports/cucumber_report.html",
    "test:junit": "cucumber-js --format junit:test-reports/cucumber_report.xml",
    "lint": "eslint src/ tests/ config/ --ext .js",
    "lint:fix": "eslint src/ tests/ config/ --ext .js --fix",
    "format": "prettier --write src/ tests/ config/ *.js *.json *.md",
    "format:check": "prettier --check src/ tests/ config/ *.js *.json *.md",
    "code:check": "npm run lint && npm run format:check",
    "code:fix": "npm run lint:fix && npm run format",
    "coverage": "jest --coverage",
    "coverage:integration": "nyc cucumber-js",
    "audit:security": "npm audit --audit-level=moderate",
    "load:test": "cd tests/load && ./run-load-tests.sh production",
    "load:test:local": "cd tests/load && ./run-load-tests.sh local",
    "load:k6:light": "k6 run --env SCENARIO=light --env ENVIRONMENT=production tests/load/k6-load-test.js",
    "load:k6:medium": "k6 run --env SCENARIO=medium --env ENVIRONMENT=production tests/load/k6-load-test.js",
    "load:k6:heavy": "k6 run --env SCENARIO=heavy --env ENVIRONMENT=production tests/load/k6-load-test.js",
    "load:artillery": "artillery run --environment production tests/load/artillery-load-test.yml"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^2.2.0",
    "@supabase/supabase-js": "^2.39.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.28.4",
    "pdf-parse": "^1.1.1",
    "qrcode-terminal": "^0.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.7.1",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@jest/globals": "^30.0.2",
    "axios": "^1.10.0",
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "cucumber-html-reporter": "^7.1.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "nodemon": "^3.0.3",
    "nyc": "^15.1.0",
    "prettier": "^3.6.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4"
  }
}
